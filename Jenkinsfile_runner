pipeline {
    agent {label 'docker-slave'}
    stages {
        stage ("Run Test") {
            steps {
                sh "apk add py-pip gcc libffi-dev libc-dev make python3-dev"
                sh "pip install docker-compose"
                sh "docker-compose up"
            }
        }
        stage ("Teardown environment") {
            steps {
                sh "docker-compose down"
            }
        }
    }
}